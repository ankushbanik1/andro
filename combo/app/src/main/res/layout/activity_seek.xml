<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".seekActivity"
android:background="#e0ffff">

    <TextView android:layout_width="match_parent"
              android:textSize="30dp"
              android:textAlignment="center"
              android:textStyle="bold"
              android:textColor="#fff73a"
              android:background="#5fded7"
              android:text="Please Start Seeking"
android:padding="10dp"
              android:layout_height="wrap_content"

              android:layout_marginTop="26dp" android:layout_alignParentTop="true"
              android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>
    <SeekBar android:layout_width="match_parent"
             android:id="@+id/seekbar"
             android:padding="10dp"

             android:layout_height="100dp"
             android:layout_alignParentStart="true"
             android:layout_alignParentTop="true"
             android:layout_marginTop="166dp"
             android:layout_marginStart="0dp"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="0dp"/>
    <TextView
            android:text="You are now at :0"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:textColor="#f00"
            android:textStyle="italic"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:id="@+id/textv2" android:layout_marginBottom="102dp"
            android:layout_marginLeft="21dp"/>


</RelativeLayout>