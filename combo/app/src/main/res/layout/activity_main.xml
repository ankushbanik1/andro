<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="#faf4dc">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:text=""
            android:id="@+id/textv1"
            android:ellipsize="marquee"
            android:textSize="35dp"
            android:textColor="#d84343"
    />
    <Button
            android:text="Play Quiz"
            android:textStyle="bold"

            android:background="#D519EE99"

            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:id="@+id/btn1" android:layout_marginTop="180dp"
            android:layout_marginLeft="0dp"/>
    <Button
            android:text="Seek your life"
            android:layout_width="match_parent"
            android:textStyle="bold"

            android:background="#D519EE99"


            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/btn2" android:layout_marginTop="298dp" android:layout_marginLeft="0dp"/>

    <Button
            android:text="Share"
            android:textStyle="bold"

            android:background="#D519EE99"

            android:textColor="#FFFFFF"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="176dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:id="@+id/btn4" android:layout_marginBottom="26dp"
            android:layout_marginLeft="176dp"/>
    <Button
            android:text="Your All Friends"
            android:textStyle="bold"

            android:background="#D519EE99"

            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:id="@+id/btn6" android:layout_marginBottom="179dp"
            android:layout_marginLeft="0dp"/>

</RelativeLayout>