<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".quizActivity"
        android:orientation="vertical"
android:background="#e0ffff">
    <TextView android:layout_width="match_parent"
              android:textColor="@color/colorAccent"
              android:textSize="25dp"
              android:textStyle="bold"
              android:text="!!Answar The Following Question!!"
              android:layout_height="wrap_content"
    />
    <TextView android:layout_width="match_parent"
              android:text="What do u want?"
              android:textColor="@color/colorPrimary"
              android:layout_height="wrap_content" android:layout_alignParentStart="true"
              android:layout_alignParentTop="true" android:layout_marginTop="29dp"
              android:layout_alignParentLeft="true"
    android:textStyle="bold"/>

    <RadioButton android:layout_width="match_parent"
                 android:text="Diamond"
                 android:layout_height="wrap_content"
                 android:id="@+id/r1"/>
    <RadioButton android:layout_width="match_parent"
                 android:text="True love"
                 android:layout_height="wrap_content"
                 android:id="@+id/r2"/>
    <RadioButton android:layout_width="match_parent"
                 android:text="Lambargini"
                 android:layout_height="wrap_content"
                 android:id="@+id/r3"/>
    <RadioButton android:layout_width="match_parent"
                 android:text="Gold"
                 android:layout_height="wrap_content"
                 android:id="@+id/r4"/>
    <Button
            android:text="submit"
            android:layout_width="match_parent"
            android:background="#0f9626"
            android:textColor="#fff"

            android:layout_height="wrap_content"
            android:id="@+id/btn5"/>
<TextView android:layout_width="match_parent"
          android:id="@+id/textv3"
          android:layout_height="100dp"/>
</LinearLayout>