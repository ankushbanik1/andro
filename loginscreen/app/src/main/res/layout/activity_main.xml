<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
android:background="@drawable/background">



   <LinearLayout android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:layout_centerVertical="true"

                 android:layout_height="wrap_content">
       <ImageView android:layout_width="100dp" android:layout_height="100dp"
       android:layout_gravity="center_horizontal"

       android:src="@drawable/adp"/>
       <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:background="@drawable/loginuser"
                 android:padding="10dp"
                 android:layout_marginEnd="20dp"
                 android:drawableStart="@drawable/baseline_account_circle_white_18dp"
                 android:layout_marginTop="20dp"

                 android:layout_marginStart="20dp"
                 android:hint="Username"
                 android:drawablePadding="10dp"
android:id="@+id/username"
                 android:drawableLeft="@drawable/loginuser"/>
       <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                 android:background="@drawable/loginuser"
                 android:padding="10dp"
                 android:layout_marginEnd="20dp"
                 android:layout_marginTop="20dp"
                 android:drawableStart="@drawable/baseline_https_white_18dp"

                 android:layout_marginStart="20dp"
                 android:hint="Password"
                 android:drawablePadding="10dp"
                 android:id="@+id/password"

                 android:drawableLeft="@drawable/loginuser" android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"/>
<TextView android:layout_width="wrap_content"
          android:text="Forget Password?"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:drawablePadding="10dp"
android:padding="10dp"
          android:layout_gravity="end"

          android:layout_marginLeft="20dp"/>



<Button android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
android:text="Login"

        android:layout_marginEnd="20dp"
        android:id="@+id/btn_login"
        android:layout_marginLeft="20dp"
        android:textSize="21sp"
android:textAllCaps="false"
android:background="@drawable/submit"
/>

       <TextView android:layout_width="wrap_content"
                 android:text="Register? Click Here"
                 android:drawableStart="@drawable/baseline_arrow_right_alt_white_18dp"

                 android:layout_height="wrap_content"
                 android:layout_marginStart="20dp"
                 android:drawablePadding="30dp"
                 android:padding="15dp"

                 android:layout_marginLeft="20dp" android:drawableLeft="@drawable/baseline_arrow_right_alt_white_18dp"/>
       <Button android:layout_width="match_parent" android:layout_height="wrap_content"
               android:layout_marginStart="20dp"
               android:drawablePadding="10dp"
               android:padding="10dp"
               android:text="Sign Up"
               android:id="@+id/btn_signup"
               android:layout_marginLeft="20dp"
               android:textSize="21sp"
               android:textAllCaps="false"
               android:layout_marginEnd="20dp"
               android:background="@drawable/signin"
       />
   </LinearLayout>


</RelativeLayout>