<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EdittextActivity">
    <EditText android:layout_width="match_parent"
              android:id="@+id/Edit1"
              android:gravity="center"
              android:padding="10dp"
              android:textSize="40dp"
              android:maxLines="2"

              android:maxLength="100"
              android:layout_height="223dp"
              android:layout_alignParentStart="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="0dp" android:layout_marginStart="0dp"
              android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"/>
    <TextView android:layout_width="match_parent"
              android:layout_height="368dp"
              android:hint="your here edited Text will appear here"
              android:textSize="30dp"
              android:textColor="#14b4d2"
              android:gravity="center"
              android:textAlignment="center"
              android:id="@+id/textView3"
              android:layout_alignParentStart="true"

              android:layout_alignParentLeft="true" android:layout_marginLeft="0dp" android:layout_marginTop="226dp"
              android:layout_marginStart="0dp" android:layout_alignParentTop="true"/>
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:id="@+id/btn2"
            android:text="Refactor"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="61dp" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"/>
