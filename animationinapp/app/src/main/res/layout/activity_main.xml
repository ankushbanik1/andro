<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"

>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnkushBanikOfficial"
            android:textSize="30sp"

            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/textview"
            android:layout_above="@+id/linear1"
            android:layout_marginBottom="319dp" android:layout_centerVertical="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            android:layout_alignParentLeft="true"/>

    <LinearLayout
            android:id="@+id/linear1"
            android:layout_margin="1dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="3dp"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="FadeIn"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background"
                    android:id="@+id/fadein"
                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"

                    android:textColor="@android:color/white"
                    android:text="FadeIn"
                    android:background="@drawable/background"
                    android:id="@+id/fadeout"
                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>
        </LinearLayout>    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="3dp"

            android:layout_width="match_parent" android:layout_height="wrap_content">

        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"

                android:text="zoom in"
                android:background="@drawable/background"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/zoomin"
                android:textAllCaps="false"
                android:layout_height="match_parent"/>

        <Button android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="zoomout"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/background"
                android:id="@+id/zoomout"
                android:textAllCaps="false"
                android:layout_height="match_parent"/>
    </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="3dp"

                android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="slidein"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background"
                    android:layout_marginRight="10dp"

                    android:id="@+id/slidein"
                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Slideout"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"

                    android:textColor="@android:color/white"
                    android:background="@drawable/background"
                    android:id="@+id/Slideout"

                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="3dp"

                android:weightSum="2"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/background"
                    android:layout_marginRight="10dp"

                    android:text="bounce"
                    android:id="@+id/bounce"
                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>

            <Button android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"

                    android:textColor="@android:color/white"
                    android:text="roated"
                    android:background="@drawable/background"
                    android:id="@+id/roated"
                    android:textAllCaps="false"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>