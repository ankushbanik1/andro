<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <Button
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open File" android:layout_alignParentStart="true" android:layout_marginStart="147dp"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_marginTop="149dp"
            android:layout_marginLeft="147dp"/>

    <TextView
            android:id="@+id/tv_read_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:text="open camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/camera" android:layout_weight="1"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_marginEnd="159dp" android:layout_marginRight="159dp"
            android:layout_marginTop="348dp"/>
    <Button
            android:text="Request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_marginEnd="170dp"
            android:layout_alignParentBottom="true" android:id="@+id/btn_request" android:layout_marginBottom="166dp"
            android:layout_marginRight="170dp"/>

</RelativeLayout>

