<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"

        android:layout_height="match_parent"
        tools:context=".calculetor"
        android:orientation="vertical"
        android:background="@android:color/white">

        <TextView
                android:ellipsize="start"
                android:layout_gravity="end"
                android:layout_width="match_parent" android:layout_height="100dp"
        android:textStyle="bold"
                  android:textColor="@android:color/black"
                  android:text=""
                android:singleLine="true"
                  android:textAlignment="textEnd"
                  android:textSize="50dp"
        android:id="@+id/tv_exp"

                  android:gravity="end"/>

        <TextView android:layout_width="match_parent" android:layout_height="84dp"
android:ellipsize="end"
                  android:singleLine="true"
                  android:textStyle="bold"
                  android:textColor="@android:color/black"
                  android:text=""
                  android:maxLines="1"
                  android:textAlignment="textEnd"
                  android:textSize="50dp"
                  android:id="@+id/tv_result"
                  android:gravity="end"/>
<LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                style="@style/ActionButton"
                android:id="@+id/tv_ac"
                android:text="AC"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/braket1"
                android:text="("
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/bracket2"
                android:text=")"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/multiply"
                android:text="X"
                android:textSize="30sp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_7"
                android:text="7"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_8"
                android:text="8"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_9"
                android:text="9"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/minus"
                android:text="-"
                android:textSize="50sp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_4"
                android:text="4"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_5"
                android:text="5"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_6"
                android:text="6"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/divide"
                android:text="/"
                android:textSize="30sp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_1"
                android:text="1"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_2"
                android:text="2"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_3"
                android:text="3"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/plus"
                android:text="+"
                android:textSize="30sp"
        />
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent" android:layout_height="match_parent">

        <TextView
                style="@style/actbutton"
                android:id="@+id/not_equal"

                android:text="!"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/tv_zero"
                android:text="0"
                android:textSize="30sp"
        />
        <TextView
                style="@style/actbutton"
                android:id="@+id/back"
                android:text="Back"
                android:textSize="30sp"
        />
        <TextView
                style="@style/ActionButton"
                android:id="@+id/equal"
                android:text="="
                android:textSize="30sp"
        />
    </LinearLayout>

</LinearLayout>



    </LinearLayout>



